/* pages/build/index.wxss */
@import "../../lib/weui.wxss";
@import "../../lib/iconfont.wxss";

.container {
  /* position: absolute;  */
  top: 0; 
  left: 0; 
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}
/* 发布图标样式 */
.fabu{
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin: 0;
  /* color: #3399eb; */
  color: var(--themeColor);
  padding: 0rpx 20rpx;
}
.fabu .icon-fabu1{
  font-size: 48rpx;
}
.publish_title{
  margin: 10rpx;
  background-color: #fff;
  height: 50rpx;
  padding: 10rpx 10rpx;
}
